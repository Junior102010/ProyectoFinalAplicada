@page "/Producto/Index"

@using ProyectoFinalAplicada.Models;
@using ProyectoFinalAplicada.Services;
@inject ProductosServices productosService
@inject NavigationManager navigationManager

<PageTitle>Registro de Productos</PageTitle>

<div class="container">
    <div class="card shadow-lg">
        @* Header: Título a la izquierda, Botón Crear a la derecha *@
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title m-0">Registro de Productos</h5>
            <a href="/Producto/Create" class="btn btn-primary">
                <span class="bi bi-plus-square"></span> Crear
            </a>
        </div>

        <div class="card-body">
            @* Fila de Filtros: Alineados al fondo para que el botón coincida con el input *@
            <div class="row mb-3 align-items-end">

                @* Columna 1: Filtro (Dropdown) *@
                <div class="col-md-3">
                    <label class="form-label">Filtrar por</label>
                    <InputSelect class="form-select" @bind-Value="Filtro">
                        <option value="" selected disabled>Elija una opci&oacute;n</option>
                        <option value="Nombre">Nombre</option>
                        <option value="Categoria">Categor&iacute;a</option>
                    </InputSelect>
                </div>

                @* Columna 2: Búsqueda (Input + Botón) *@
                <div class="col-md-5">
                    <label class="form-label">B&uacute;squeda</label>
                    <div class="input-group">
                        <input class="form-control" @bind="ValorFiltro" placeholder="Buscar producto..." />
                        <button type="button" class="btn btn-outline-primary" @onclick="Buscar">
                            <span class="bi bi-search"></span> Buscar
                        </button>
                    </div>
                </div>

                @* Columna 3: Botón Restablecer (Opcional, para limpiar filtro) *@
                <div class="col-md-2">
                    <button type="button" class="btn btn-outline-secondary" @onclick="Restablecer">
                        <span class="bi bi-arrow-counterclockwise"></span> Todo
                    </button>
                </div>
            </div>

            @* Tabla de Resultados *@
            <table class="table table-hover table-bordered text-center align-middle">
                <thead class="table-striped table-light text-black">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Categor&iacute;a</th>
                        <th>Precio</th>
                        <th>Existencia</th>
                        <th>Editar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var producto in ListaProductos)
                    {
                        <tr>
                            <td>@producto.ProductoId</td>
                            <td class="text-start">@producto.NombreProducto</td>
                            <td>@producto.Categoria</td>
                            <td class="text-end">@producto.Precio.ToString("N2")</td>
                            <td>@producto.Existencia</td>
                            <td>
                                <a href="/Producto/Edit/@producto.ProductoId" class="btn btn-outline-primary btn-sm">
                                    <span class="bi bi-pencil-square"></span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @* Footer: Resumen de totales *@
        <div class="card-footer d-flex justify-content-between text-muted">
            <span><strong>Cantidad:</strong> @ListaProductos.Count()</span>
            <span><strong>Valor Inventario:</strong> @ListaProductos.Sum(p => p.Precio * p.Existencia).ToString("C2")</span>
        </div>
    </div>
</div>

@code {
    public List<Producto> ListaProductos { get; set; } = new List<Producto>();
    public string Filtro { get; set; } = string.Empty;
    public string ValorFiltro { get; set; } = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        ListaProductos = await productosService.Listar(p => p.ProductoId > 0);
    }

    private async Task Buscar()
    {
        if (!string.IsNullOrWhiteSpace(ValorFiltro))
        {
            if (Filtro == "Nombre")
            {
                ListaProductos = await productosService.Listar(p => p.NombreProducto.ToLower().Contains(ValorFiltro.ToLower()));
            }
            else if (Filtro == "Categoria")
            {
                ListaProductos = await productosService.Listar(p => p.Categoria.ToLower().Contains(ValorFiltro.ToLower()));
            }
        }
        else
        {
            ListaProductos = await productosService.Listar(p => p.ProductoId > 0);
        }
    }

    private async Task Restablecer()
    {
        ListaProductos = await productosService.Listar(e => e.ProductoId > 0);
        Filtro = string.Empty;
        ValorFiltro = string.Empty;
    }
}