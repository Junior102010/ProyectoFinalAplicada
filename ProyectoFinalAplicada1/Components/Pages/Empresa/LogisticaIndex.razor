@page "/Logistica/Index"

@inject ConfiguracionService configService
@inject NavigationManager navigationManager
@inject PageTitleService PageTitleService
@using Microsoft.AspNetCore.Authorization

@attribute [Authorize(Roles = "Administrador")]

<PageTitle>Panel de Logística</PageTitle>

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold text-dark"><i class="bi bi-truck-front"></i> Panel de Logística</h2>
            <p class="text-muted">Gestión general de sectores de entrega y unidades de medida.</p>
        </div>
    </div>

    @* --- TARJETAS DE RESUMEN Y ACCESO RAPIDO --- *@
    <div class="row g-4">

        @* Tarjeta Sectores *@
        <div class="col-md-6 col-lg-6">
            <div class="card card-glass h-100 shadow-sm border-0">
                <div class="card-body d-flex flex-column align-items-center text-center p-5">
                    <div class="bg-success bg-opacity-10 p-4 rounded-circle mb-3">
                        <i class="bi bi-geo-alt-fill text-success fs-1"></i>
                    </div>
                    <h3 class="card-title fw-bold">Sectores</h3>
                    <p class="card-text text-muted">Gestione los barrios, municipios y rutas de entrega.</p>

                    <h2 class="fw-bold text-success my-3">@CantidadSectores</h2>

                    <a href="/Logistica/Sectores" class="btn btn-outline-success px-4 mt-auto rounded-pill">
                        Ver Listado <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        @* Tarjeta Unidades *@
        <div class="col-md-6 col-lg-6">
            <div class="card card-glass h-100 shadow-sm border-0">
                <div class="card-body d-flex flex-column align-items-center text-center p-5">
                    <div class="bg-primary bg-opacity-10 p-4 rounded-circle mb-3">
                        <i class="bi bi-rulers text-primary fs-1"></i>
                    </div>
                    <h3 class="card-title fw-bold">Unidades</h3>
                    <p class="card-text text-muted">Configure libras, cajas, sacos y abreviaturas.</p>

                    <h2 class="fw-bold text-primary my-3">@CantidadUnidades</h2>

                    <a href="/Logistica/Unidades" class="btn btn-outline-primary px-4 mt-auto rounded-pill">
                        Ver Listado <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>

@code {
    public int CantidadSectores { get; set; } = 0;
    public int CantidadUnidades { get; set; } = 0;

    protected override async Task OnInitializedAsync()
    {
        PageTitleService.SetTitle("Logística");


        var sectores = await configService.ListarSectores();
        CantidadSectores = sectores.Count;

        var unidades = await configService.ListarUnidades();
        CantidadUnidades = unidades.Count;
    }
}